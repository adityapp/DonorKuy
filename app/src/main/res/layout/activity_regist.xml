<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.axce.donorkuy.Activity.RegistActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profil_image"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/profile" />

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="40sp"
                        android:layout_toRightOf="@id/profil_image"
                        android:text="E-Mail"
                        android:textSize="18dp"
                        android:lines="1"
                        android:ellipsize="end"/>
                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="20sp"
                android:text="Nama"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/input_nama"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textinputborder"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="20sp"
                android:text="TTL"
                android:textSize="18dp" />

            <Button
                android:id="@+id/pick_date"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                android:layout_marginTop="20sp"
                android:background="#f48fb1"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="DD / MM / YYYY"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="20sp"
                android:text="No Tlp."
                android:textSize="18dp" />

            <EditText
                android:id="@+id/input_tlp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textinputborder"
                android:inputType="phone"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="20sp"
                android:text="Gol Darah"
                android:textSize="18dp" />

            <RadioGroup
                android:id="@+id/radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/darker_gray"
                    android:text="AB"
                    android:textColor="@android:color/darker_gray"/>

                <RadioButton
                    android:id="@+id/radio_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:buttonTint="@android:color/darker_gray"
                    android:text="A"
                    android:textColor="@android:color/darker_gray" />

                <RadioButton
                    android:id="@+id/radio_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:buttonTint="@android:color/darker_gray"
                    android:text="B"
                    android:textColor="@android:color/darker_gray" />

                <RadioButton
                    android:id="@+id/radio_o"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:buttonTint="@android:color/darker_gray"
                    android:text="0"
                    android:textColor="@android:color/darker_gray"/>

                <RadioButton
                    android:id="@+id/radio_non"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:buttonTint="@android:color/darker_gray"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"/>

            </RadioGroup>

            <Button
                android:id="@+id/profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="36sp"
                android:layout_marginRight="24sp"
                android:layout_marginTop="36sp"
                android:background="@color/colorAccent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="SAVE"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
