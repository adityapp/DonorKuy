<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.axce.donorkuy.Activity.BerkahActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10sp">

        <ImageButton
            android:id="@+id/berkah_coins"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/award48" />

        <TextView
            android:id="@+id/berkah_coin_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/berkah_coins"
            android:text="0"
            android:textSize="28dp" />

        <View
            android:layout_width="1.5dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70sp"
            android:background="@color/line" />

        <ImageButton
            android:id="@+id/berkah_basket"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:background="@android:color/transparent"
            android:src="@drawable/basket" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/berkah_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
